/*CSS*/

* {
	box-sizing: border-box;
		
}

body {
		font-family: arial;
		background-color: #f1f1f1;
		padding: 10px;
}

/*Formatos de cabeçalho*/
#cabecalho {
			background-color: white;
			text-align: center;
			padding: 30px;
	
}

#cabecalho h1 {
				font-size: 50px;
	
}


/*Menu*/

#menu {
		background-color: #333;
		overflow: hidden;
	
}

#menu a {
				display: block;
				text-decoration: none;
				color: #f2f2f2;
				text-align: center;
				float: left;
				padding: 14px;
	
}

#menu a:hover {
				background-color: #ddd;
				color: Gray;
	
}


/*Conteúdo*/

#conteudo {
			width: 100%;
	
}


/*coluna esquerda*/

#esquerda {
			float: left;
			width: 75%;
	
}

/*coluna direita*/

#direita {
			float: left;
			width: 25%;
			padding-left: 20px;
	
}


/*Formatos card*/

.card {
			background-color: gray;
			padding: 20px;
			margin-top: 20px;
}


/*Formatos imagem*/

.imagem {
			width: 100%;
			background-color: #aaa;
			padding: 20px;
	
}

#rodape {
			background-color: #ddd;
			text-align: center;
			padding: 20px;			
	
}

/*Limpa flutuadores*/

#conteudo:after {
				content: "";
				display: table;
				clear: both;	
}


/*Responsivo*/

@media screen and (max-width: 800px) {
					#esquerda, #direita {
						width: 100%;
						padding: 0;						
					}
					
					#cabecalho {
						color: red;
					}
	
}

@media screen and (max-width: 600px) {
						#cabecalho {
							color: green;
						}
		
}




